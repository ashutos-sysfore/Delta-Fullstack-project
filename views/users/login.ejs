<% layout("/layouts/boilerplate.ejs") %>
<div class="row my-3">
    <h1 class="col-6 offset-3">Login for Wanderlust</h1>
    <div class="col-8 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <lable for="username" class="form-label" >Username</lable>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">looks good!</div>
                <div class="invalid-feedback">Please enter username</div>
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="valid-feedback">looks good!</div>
                <div class="invalid-feedback">Please enter password</div>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>