<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create a new listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label" >Title</lable>
                    <input type="text" name="listing[title]" placeholder="Enter a catchy title" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Please enter title</div>
                </div>

                <div class="mb-3">
                    <lable for="description" class="form-label" >description</lable>
                    <textarea type="text" name="listing[description]" placeholder="description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add description</div>
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <lable for="image" class="form-label">Upload Image</lable>
                    <input type="file" name="listing[image]" placeholder="Upload image" class="form-control" required>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label" >Price</lable>
                        <input type="number" name="listing[price]" placeholder="1200" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid price</div>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label" >Country</lable>
                        <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                        <div class="invalid-feedback">Please enter country name</div>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>

                <div class="mb-3">
                    <lable for="location" class="form-label" >Location</lable>
                    <input type="text" name="listing[location]" placeholder="Bangalore, Delhi" class="form-control" required>
                    <div class="invalid-feedback">Please enter location</div>
                    <div class="valid-feedback">Looks good!</div>
                </div>
             
                <button class="btn btn-dark add-btn mt-3">Add</button>
                <br><br>
            </form>
    </div>
</div>
</body>
